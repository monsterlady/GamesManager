<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <gg.my.gamemanager.control.DrawImageView
        android:id="@+id/itemView_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:shadowColor="@color/colorText"
        app:layout_constraintBottom_toTopOf="@+id/itemView_Desc"
        app:layout_constraintHeight_min="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_min="32dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="1"/>

    <TextView
        android:id="@+id/itemView_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="CS:GO"
        android:textColor="@color/colorText"
        android:textSize="12pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemView_Desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="bottom"
        android:maxLines="2"
        android:minLines="2"
        android:text="反恐精英：全球血崩"
        android:textSize="8pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemView_name" />
</android.support.constraint.ConstraintLayout>